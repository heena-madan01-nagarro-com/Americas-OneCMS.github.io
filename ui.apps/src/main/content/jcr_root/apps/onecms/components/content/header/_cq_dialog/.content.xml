<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Header"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType="nt:unstructured">
         <tabs jcr:primaryType="nt:unstructured"
               sling:resourceType="granite/ui/components/coral/foundation/tabs">
            <items jcr:primaryType="nt:unstructured">
               <navData jcr:primaryType="nt:unstructured"
                        jcr:title="Navigation Data"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <navItems composite="{Boolean}true"
                                     fieldLabel="Navigation Items"
                                     jcr:primaryType="nt:unstructured"
                                     sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                              <field cq-msm-lockable="./navItems"
                                     jcr:primaryType="nt:unstructured"
                                     name="./navItems"
                                     sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                 <items jcr:primaryType="nt:unstructured">
                                    <navItemLabel fieldDescription="Label to display on the Navigation Item"
                                                  fieldLabel="Navigation Item Label"
                                                  jcr:primaryType="nt:unstructured"
                                                  name="./navItemLabel"
                                                              required="{Boolean}true"
                                                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                    <navItemLink fieldDescription="Navigation Item Link/URL"
                                                 fieldLabel="Nav Item URL"
                                                 jcr:primaryType="nt:unstructured"
                                                 name="./navItemLink"
                                                 sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"/>
                                             <itemtype
                                                  jcr:primaryType="nt:unstructured"
                                                  sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                  fieldLabel="Item Type"
                                                  name="./itemType">
                                                  <items jcr:primaryType="nt:unstructured">
                                                    <link
                                                       jcr:primaryType="nt:unstructured"
                                                       selected="{Boolean}true"
                                                       text="Link"
                                                       value="link" />
                                                    <button
                                                       jcr:primaryType="nt:unstructured"
                                                       text="Button"
                                                       value="button" />
                                                  </items>
                                             </itemtype>
                                     <enableMegaMenu
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        fieldDescription="Please check to enable Megamenu for Navigation Item"
                                        id="enableMegaMenu"
                                        name="./enableMegaMenu"
                                        text="Add MegaMenu for this Navigation Item"
                                        value="true"/>
                                 </items>
                              </field>
                           </navItems>
                        </items>
                     </column>
                  </items>
               </navData>
               <brandData jcr:primaryType="nt:unstructured"
                          jcr:title="Brand Data"
                          sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <brandLogo cq-msm-lockable="./brandLogo"
                                      fieldLabel="Brand Logo Image Path"
                                      jcr:primaryType="nt:unstructured"
                                      name="./brandLogo"
                                      rootPath="/content/dam"
                                      sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"/>
                           <brandLogoAltText cq-msm-lockable="./brandLogoAltText"
                                             fieldDescription="Alt text to display on the Brand Logo"
                                             fieldLabel="Alt text for brand Logo"
                                             jcr:primaryType="nt:unstructured"
                                             name="./brandLogoAltText"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <brandDivision cq-msm-lockable="./brandDivision"
                                          fieldDescription="Text to display as Brand Division"
                                          fieldLabel="Brand Division"
                                          jcr:primaryType="nt:unstructured"
                                          name="./brandDivision"
                                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <actions composite="{Boolean}true"
                                    fieldLabel="Action Icons"
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                              <field cq-msm-lockable="./actions"
                                     jcr:primaryType="nt:unstructured"
                                     name="./actions"
                                     sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                 <items jcr:primaryType="nt:unstructured">
                                    <iconUrl fieldDescription="Path/URL of the Icon"
                                             fieldLabel="Icon Image"
                                             jcr:primaryType="nt:unstructured"
                                             name="./iconUrl"
                                             rootPath="/content/dam"
                                             required="{Boolean}true"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"/>
                                    <iconAltText fieldDescription="Alt text to display on the Icon"
                                                 fieldLabel="Icon Alt text"
                                                 jcr:primaryType="nt:unstructured"
                                                 name="./iconAltText"
                                                 sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                    <iconTooltipText fieldDescription="Tooltip text to display on the Icon"
                                                     fieldLabel="Icon Tooltip text"
                                                     jcr:primaryType="nt:unstructured"
                                                     name="./iconTooltipText"
                                                     sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                 </items>
                              </field>
                           </actions>
                        </items>
                     </column>
                  </items>
               </brandData>

                    <featuredProduct jcr:primaryType="nt:unstructured"
                         jcr:title="Featured Product"
                         sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <title cq-msm-lockable="./title"
                                  fieldDescription="Title to display on Featured product"
                                  fieldLabel="Featured Product Title "
                                  jcr:primaryType="nt:unstructured"
                                  name="./title"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <description cq-msm-lockable="./description"
                                        fieldDescription="Detailed Description for Featured product"
                                        fieldLabel="Featured Product Description "
                                        jcr:primaryType="nt:unstructured"
                                        name="./description"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"/>
                           <featuredProductImage allowUpload="{Boolean}false"
                                                 autoStart="{Boolean}false"
                                                 class="cq-droptarget"
                                                 cq-msm-lockable="./featuredProductImage/file"
                                                 fieldDescription="Image for Featured product"
                                                 fieldLabel="Featured Product Image "
                                                 fileReferenceParameter="./featuredProductImage/fileReference"
                                                 jcr:primaryType="nt:unstructured"
                                                 mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                                 multiple="{Boolean}false"
                                                 name="./featuredProductImage/file"
                                                 sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                 title="Drag to select image"
                                                 uploadUrl="${suffix.path}"
                                                 useHTML5="{Boolean}true"/>
                           <featuredProductImageResType jcr:primaryType="nt:unstructured"
                                                        name="./featuredProductImage/sling:resourceType"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                        value="core/wcm/components/image/v2/image"/>
                           <productUrl fieldDescription="Path/URL of the Product Page"
                                             fieldLabel="Product Image Destination URL"
                                             jcr:primaryType="nt:unstructured"
                                             name="./productUrl"
                                             rootPath="/content"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"/>
                            <target
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Target"
                                        name="./target">
                                             <items jcr:primaryType="nt:unstructured">
                                               <self
                                                  jcr:primaryType="nt:unstructured"
                                                  selected="{Boolean}true"
                                                  text="Self"
                                                  value="_self" />
                                               <blank
                                                  jcr:primaryType="nt:unstructured"
                                                  text="Blank (new tab)"
                                                  value="_blank" />
                                             </items>
                            </target>
                        </items>
                     </column>
                  </items>
               </featuredProduct>
            
            </items>
         </tabs>
      </items>
   </content>
</jcr:root>
